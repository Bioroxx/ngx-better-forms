{
  "name": "ngx-better-forms-workspace",
  "type": "module",
  "scripts": {
    "start": "ng serve ngx-better-forms-docs",

    "build:lib": "npm run script:copy-readme && ng build ngx-better-forms --configuration production",
    "build:docs": "npm run script:extract-code-examples && ng build ngx-better-forms-docs --base-href /ngx-better-forms/ --configuration production",
    "build:lib:watch": "ng build ngx-better-forms --watch --configuration development",

    "test:lib": "ng test ngx-better-forms",
    "test:lib:ci": "ng test ngx-better-forms --watch=false --browsers=ChromeHeadless --no-progress",

    "script:extract-code-examples": "tsx projects/ngx-better-forms-docs/scripts/extract-code-examples.ts",
    "script:copy-readme": "tsx scripts/copy.ts README.md projects/ngx-better-forms/better-forms/README.md"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^21.0.0-rc.1",
    "@angular/compiler": "^21.0.0-rc.1",
    "@angular/core": "^21.0.0-rc.1",
    "@angular/forms": "^21.0.0-rc.1",
    "@angular/platform-browser": "^21.0.0-rc.1",
    "@angular/router": "^21.0.0-rc.1",
    "@primeuix/themes": "^1.2.5",
    "tailwindcss": "^4.1.17",
    "@tailwindcss/postcss": "4.1.4",
    "@types/prismjs": "^1.26.5",
    "postcss": "8.5.3",
    "daisyui": "^5.4.7",
    "prism-material-themes": "^1.0.5",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0-rc.1",
    "@angular/cli": "^21.0.0-rc.1",
    "@angular/compiler-cli": "^21.0.0-rc.1",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.0-rc.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2"
  }
}
